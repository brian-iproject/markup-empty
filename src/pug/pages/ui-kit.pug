extends ../layout.pug

block meta
  title UI-KIT
  meta(name='description', content='')

block content
  .wide-block
    .page-container
      a(href='#') Ссылка
      h2 Цвета
      .two-column
        .two-column__column
          .colors-list
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-primary--light)")
              .colors-list__text
                p CSS-variable: var(--color-primary--light)
                p RGB: rgb(230, 244, 246)
                p Hex: #E6F4F6
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-primary)")
              .colors-list__text
                p CSS-variable: var(--color-primary)
                p RGB: rgb(1, 124, 144)
                p Hex: #017C90
                p Class: color-primary
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-primary--dark)")
              .colors-list__text
                p CSS-variable: var(--color-primary--dark)
                p RGB: rgb(3, 108, 125)
                p Hex: #036C7D
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-white)")
              .colors-list__text
                p CSS-variable: var(--color-white)
                p RGB: rgb(255, 255, 255)
                p Hex: #ffffff
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-black)")
              .colors-list__text
                p CSS-variable: var(--color-black)
                p RGB: rgb(32, 32, 32)
                p Hex: #000000
        .two-column__column
          .colors-list
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-gray--light)")
              .colors-list__text
                p CSS-variable: var(--color-gray--light)
                p RGB: rgb(243, 243, 243)
                p Hex: #f3f3f3
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-gray)")
              .colors-list__text
                p CSS-variable: var(--color-gray)
                p RGB: rgb(217, 217, 217)
                p Hex: #d9d9d9
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-gray--dark)")
              .colors-list__text
                p CSS-variable: var(--color-gray--dark)
                p RGB: rgb(90, 90, 90)
                p Hex: #5a5a5a
            .colors-list__item
              .colors-list__color
                .colors-list__color-inner(style="background-color: var(--color-gray--darker)")
              .colors-list__text
                p CSS-variable: var(--color-gray--darker)
                p RGB: rgb(21, 21, 21)
                p Hex: #151515

      h2 Заголовки (тег, class)
      .two-column
        .two-column__column
          h1 Заголовок H1
          h2 Заголовок H2
          h3 Заголовок H3
        .two-column__column
          .h1 Заголовок H1
          .h2 Заголовок H2
          .h3 Заголовок H3

      h2 Списки
      .two-column
        .two-column__column
          h3 Нумерованный список:
          ol.list
            li Регистрация и общие настройки портала
            li Добавление сотрудников в Битрикс24
            li Настройка стадий лидов и сделок
            li Добавление пользовательских полей
            li Позвоните менеджеру или закажите обратный звонок. Обсудите какое изделие хотите заказать.
            li После того, как заказ будет полностью оговорен, вам на электронную почту придет коммерческое предложение с подробным описанием изделия и реквизиты на предоплату.
            li После поступления денег на наш расчетный счет, изделие передается на производство. Сроки изготовления — около 3 рабочих дней.
            li В день доставки мы делаем предварительный звонок для согласования времени. Доставка по России осуществляется компанией «Деловые линии» (согласно тарифам ТК). Стоимость доставки по Москве — 1000 руб., по области — плюс 30 руб. за каждый километр от МКАД.
        .two-column__column
          h3 Маркерованный список:
          ul.list
            li Регистрация и общие настройки портала
            li Добавление сотрудников в Битрикс24
            li Настройка стадий лидов и сделок
            li Добавление пользовательских полей
            li Позвоните менеджеру или закажите обратный звонок. Обсудите какое изделие хотите заказать.
            li После того, как заказ будет полностью оговорен, вам на электронную почту придет коммерческое предложение с подробным описанием изделия и реквизиты на предоплату.
            li После поступления денег на наш расчетный счет, изделие передается на производство. Сроки изготовления — около 3 рабочих дней.
            li В день доставки мы делаем предварительный звонок для согласования времени. Доставка по России осуществляется компанией «Деловые линии» (согласно тарифам ТК). Стоимость доставки по Москве — 1000 руб., по области — плюс 30 руб. за каждый километр от МКАД.

      h2 Кнопки
      h3 Small
      .button-group
        +button({
          title: 'Тест-драйв',
          mods: ['primary']
        })
        +button({
          title: 'Тест-драйв',
          mods: ['contour']
        })
        +button({
          title: 'Тест-драйв',
          mods: ['primary'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          title: 'Тест-драйв',
          mods: ['contour'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          mods: ['primary'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          mods: ['contour'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          title: 'Тест-драйв',
          mods: ['text'],
          svg: '<svg class="icon"><use href="#arrow-right"></use></svg>'
        })
      h3 Medium
      .button-group
        +button({
          title: 'Тест-драйв',
          mods: ['primary', 'medium'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          title: 'Тест-драйв',
          mods: ['contour', 'medium']
        })
        +button({
          title: 'Тест-драйв',
          mods: ['medium', 'text'],
          svg: '<svg class="icon"><use href="#arrow-right"></use></svg>'
        })

      h3 Large
      .button-group
        +button({
          title: 'Тест-драйв',
          mods: ['primary', 'large', 'large-xs'],
          svg: '<svg class="icon"><use href="#arrow-down"></use></svg>'
        })
        +button({
          title: 'Тест-драйв',
          mods: ['contour', 'large']
        })

      h2 Поля
      +field-text({
        title: 'Текстовое поле',
        mods: ['large'],
        attrs: {
          type: 'tel',
          placeholder: 'Тест-драйв'
        }
      })
      +field-text({
        title: 'Текстовое поле с иконкой',
        svg: '<svg class="icon"><use href="#magnifier"></use></svg>',
        attrs: {
          type: 'tel',
          placeholder: 'Тест-драйв'
        }
      })
      +field-text({
        title: 'Многострочное текстовое поле',
        isTextarea: true,
        attrs: {
          placeholder: 'Тест-драйв'
        }
      })
      +field-text({
        title: 'Многострочное текстовое поле c иконкой',
        isTextarea: true,
        svg: '<svg class="icon"><use href="#magnifier"></use></svg>',
        attrs: {
          placeholder: 'Тест-драйв'
        }
      })

